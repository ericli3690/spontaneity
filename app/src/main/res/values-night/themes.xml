<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spontaneity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <!-- <item name="android:windowBackground">@color/dark_green</item> use this to set background color -->
    </style>

    <style name="Theme.Spontaneity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Spontaneity.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.Spontaneity.ToolbarEmboss">
        <item name="android:background">@color/purple_500</item>
    </style>

</resources>